@model IEnumerable<BudgetDS.Models.CodeFirst.Account>

<div class="container">
    <div class="row">
        <h2>Your Accounts</h2>
        <div class="add-acc pull-right">
            @Html.ActionLink("+ Add Account", "Create", "Accounts", null,new { @class = "btn btn-success"})
    </div>
</div>
    <div class="row">
        <div class="col-md-4">
            <strong>@Html.DisplayNameFor(model => model.Name)</strong>
        </div>
        <div class="col-md-4">
            <strong>@Html.DisplayNameFor(model => model.Balance)</strong>
        </div>
        <div class="col-md-4">
            <strong>Options</strong>
        </div>
        <hr />
        </div>
        @foreach (var item in Model)
            {
            <div class="row">
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="col-md-4">
                    <span>$ </span>@Html.DisplayFor(modelItem => item.Balance)
                </div>
                <div class="col-md-4">
                    @Html.ActionLink("View Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete Account", "Delete", new { id = item.Id })
                </div>
            </div>
            <hr />
        }

    </div>
