@model BudgetDS.Models.CodeFirst.Transaction

<div class="login-wrapper">
    <div class="login-widget animation-delay1">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <div class="pull-left">
                    Delete a Transaction
                </div>
                <hr />
                <div class="panel-body">

                    <h4>Are you sure you want to delete this?</h4>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                Date
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                            <dt>
                                Account
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Account.Name)
                            </dd>

                            <dt>
                                Category
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Category.Name)
                            </dd>

                            <dt>
                                Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt>
                                Amount
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Amount)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color col-md-offset-4 col-md-12">
                                <input type="submit" value="Delete" class="btn btn-default btn-danger" /> |
                                @Html.ActionLink("Back to Account", "Details", "Accounts", new { id = Model.Account.Id }, null)
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
