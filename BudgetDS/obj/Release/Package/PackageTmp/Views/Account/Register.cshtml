@model BudgetDS.Models.RegisterViewModel

@{
    Layout = "";
}

<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Registration</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <!-- Bootstrap core CSS -->
        <link href="~/Content/font-awesome.min.css" rel="stylesheet">

</head>
<body>

<div class="login-wrapper">
    <div class="text-center">
        <h2 class="fadeInUp animation-delay10" style="font-weight:bold">
            <span class="text-success">Budget</span> <span style="color:#ccc; text-shadow:0 1px #fff">Tracker</span>
        </h2>
    </div>
    <div class="login-widget animation-delay1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-plus-circle fa-lg"></i> Sign up
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-login" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName)
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-sm bounceIn animation-delay2" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName)
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm bounceIn animation-delay3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm bounceIn animation-delay4" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm bounceIn animation-delay5" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm bounceIn animation-delay6" })
                    </div>
                    <div class="seperator"></div>
                            <div class="form-group">
                                <div class="controls">
                                    Already have an account? @Html.ActionLink("Log In", "Login", new { @class = "primary-font login-link" })
                                </div>
                            </div><!-- /form-group -->
                    @Html.ValidationSummary("", new { @class = "text-danger col-sm-offset-1" })
                    <div class="form-group">
                            <input type="submit" class="btn btn-success btn-sm bounceIn animation-delay7 pull-right" value="Sign Up" />
                    </div>
                }
                </div>
            </div><!-- /panel -->
        </div><!-- /login-widget -->
    </div><!-- /login-wrapper -->

    </body>
    </html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
