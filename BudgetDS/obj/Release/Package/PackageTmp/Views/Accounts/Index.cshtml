@model IEnumerable<BudgetDS.Models.CodeFirst.Account>

<div class="container">
    <h2>Your Accounts</h2>

    <div class="row">
        <div class="col-md-4">
            <strong>@Html.DisplayNameFor(model => model.Name)</strong>
        </div>
        <div class="col-md-4">
            <strong>@Html.DisplayNameFor(model => model.Balance)</strong>
        </div>
        <div class="col-md-4">
            <strong>Options</strong>
        </div>
        <hr />
        </div>
        @foreach (var item in Model)
            {
            <div class="row">
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.Balance)
                </div>
                <div class="col-md-4">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            </div>
            <hr />
        }

    </div>
