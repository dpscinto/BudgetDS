@model BudgetDS.Models.CodeFirst.Household

        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <span>Welcome Home!</span>
<hr />
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Household Members
        </div>
        <div class="panel-body">
            @foreach (var user in Model.ApplicationUser)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="panel panel-default panel-stat1 bg-danger">
                        <div class="panel-body">
                            <br />
                            <div class="title">
                                <span class="m-bottom-xs">@Html.DisplayFor(u => user.FirstName) @Html.DisplayFor(u => user.LastName)</span>
                            </div>
                        </div>
                    </div><!-- /panel -->
                </div><!-- /.col -->
            }
        </div>
    </div><!-- /panel -->
</div><!-- /.col -->

<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Invite New Members
        </div>
        <div class="panel-body">
            <form action="@Url.Action("Invite")" method="post" class="form-inline">
                Invite another user to join your household:
                <input type="hidden" name="HouseholdId" value="@Model.Id" />
                <br />
                <strong>Email</strong>
                <input type="text" name="Email" class="form-control" />
                <input type="submit" value="Invite" class="btn btn-default btn-success" />
            </form>
        </div>
    </div><!-- /panel -->
</div><!-- /.col -->

<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Leave Household
        </div>
        <div class="panel-body">
            Leave your current household:
            <button type="button" class="btn btn-default btn-warning" data-toggle="modal" data-target="#myModal">Leave</button>
        </div>
    <br />
    </div><!-- /panel -->
</div><!-- /.col -->
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Leave the Household</h4>
            </div>
            <div class="modal-body">
                <form method="Post" action="@Url.Action("Leave","Households")">
                    @Html.AntiForgeryToken()
                    Are you sure you want to leave the household?
                    <input type="submit" value="Confirm" class="btn btn-default btn-danger pull-right" />
                </form>
                <br />
            </div>
        </div>
    </div>
</div>
