@{
    Layout = "";
}

@model BudgetDS.Models.CodeFirst.Household

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap core CSS -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">

</head>
<body>
    <div class="login-wrapper">
        <div class="text-center">
            <h2 class="fadeInUp animation-delay8" style="font-weight:bold">
                <span class="text-success">Budget</span> <span style="color:#ccc; text-shadow:0 1px #fff">Tracker</span>
            </h2>
        </div>
        <div class="login-widget animation-delay1">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="pull-left">
                        Create a Household
                    </div>
                    <br />
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-login">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <label>Enter a Household Name:</label>
                                <div class="form-inline">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                        <div class="error-message">
                                            @ViewBag.ErrorMessage
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>
                    <hr />
                        <div class="pull-left">
                            Join a Household
                        </div>
                    <br />
                        <div class="panel-body">
                            @using (Html.BeginForm("Join", "Households"))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="Name" value="" />
                                <div class="form-login">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <label>Enter Your Invite Code:</label>
                                    <div class="form-inline">
                                        <div class="form-group">
                                            <input type="text" name="Code" class="form-control" />
                                        </div>

                                        <div class="form-group" method="Post" action="@Url.Action("Join", "Households")">
                                            <input type="submit" value="Join" class="btn btn-default" />
                                            <div class="error-message">
                                                @ViewBag.ErrorMessage
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div><!-- /panel -->
                </div>
            </div>
        </div><!-- /login-widget -->
    </div><!-- /login-wrapper -->

</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
